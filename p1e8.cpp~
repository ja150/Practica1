#include <iostream>
#include <cstring>

using namespace std;

int main(){
	int tam=50,i;
	char cadena[tam];
	char *p=cadena;
	int posicion;

	cout << "INtroduce cadena" << endl;
	cin.getline(cadena, tam);
	
	for(i=0; i<=tam; i++){
		if(*p==' '){
			p++;
			break;	
		}	
		p++;
	}
	cout << p;
	cout << endl;
}
